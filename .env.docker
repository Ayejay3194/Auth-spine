# ================================
# Auth-Spine Environment Variables
# ================================
# This file contains all configuration for docker-compose
# Copy this to .env and modify as needed
#
# IMPORTANT: Never commit .env to version control!
# ================================

# ================================
# Database Configuration
# ================================
POSTGRES_USER=authspine
POSTGRES_PASSWORD=changeme_strong_password_here
POSTGRES_DB=authspine
POSTGRES_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=changeme_redis_password_here
REDIS_PORT=6379

# ================================
# Auth Server Configuration
# ================================
AUTH_PORT=4000
JWT_SECRET=change-this-to-a-strong-random-secret-at-least-32-characters-long
JWT_ALG=HS256
ISSUER=http://localhost:4000
ACCESS_TTL_SECONDS=3600
REFRESH_TTL_SECONDS=604800
CORS_ORIGINS=http://localhost:3000

# ================================
# Business App Configuration
# ================================
APP_PORT=3000
NEXT_PUBLIC_AUTH_URL=http://localhost:4000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-this-nextauth-secret-to-something-secure

# ================================
# Application Environment
# ================================
NODE_ENV=production

# ================================
# External Services (Optional)
# ================================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# SendGrid
SENDGRID_API_KEY=

# Sentry
SENTRY_DSN=

# ================================
# Production URLs (Override for production)
# ================================
# ISSUER=https://auth.yourdomain.com
# NEXT_PUBLIC_AUTH_URL=https://auth.yourdomain.com
# NEXTAUTH_URL=https://app.yourdomain.com
# CORS_ORIGINS=https://app.yourdomain.com
