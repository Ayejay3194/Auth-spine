{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Security Audit Gate Output",
  "type": "object",
  "properties": {
    "gate": {
      "type": "object",
      "properties": {
        "result": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": [
                "PASS",
                "WARN",
                "FAIL"
              ]
            },
            "reasons": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "status"
          ],
          "additionalProperties": true
        }
      },
      "required": [
        "result"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "gate"
  ],
  "additionalProperties": true
}