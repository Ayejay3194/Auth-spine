# Business Spine Configuration
TENANT_ID=your-tenant-id
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/business_spine

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379

# External APIs
STRIPE_SECRET_KEY=sk_test_...
SENDGRID_API_KEY=SG.xyz...

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Smart Assistant Configuration
ASSISTANT_ENABLED=true
ASSISTANT_ENGINES=predictive_scheduling,client_behavior,dynamic_pricing,segmentation
ASSISTANT_USE_LLM=true
ASSISTANT_TEACHER_MODE=true

# LLM Configuration
# Choose one provider: openai, anthropic, or local
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.7

# Local LLM Configuration
LOCAL_LLM_BASE_URL=http://localhost:8080
LOCAL_LLM_MODEL=llama2
LOCAL_LLM_API_KEY=your-local-api-key-if-needed

# LLM Fallback
LLM_FALLBACK_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
