{
  "$id": "solari.plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "goal",
    "steps",
    "stopConditions",
    "safety"
  ],
  "properties": {
    "goal": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "kind",
          "description",
          "inputs",
          "expectedOutput"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string",
            "enum": [
              "tool",
              "generate_report",
              "retrieve",
              "reflect"
            ]
          },
          "description": {
            "type": "string"
          },
          "inputs": {
            "type": "object"
          },
          "expectedOutput": {
            "type": "string"
          }
        }
      }
    },
    "stopConditions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "safety": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mustUseToolsForFacts",
        "mustOutputJson",
        "maxSteps"
      ],
      "properties": {
        "mustUseToolsForFacts": {
          "type": "boolean"
        },
        "mustOutputJson": {
          "type": "boolean"
        },
        "maxSteps": {
          "type": "integer",
          "minimum": 1,
          "maximum": 12
        }
      }
    }
  }
}