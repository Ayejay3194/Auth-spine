// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id
  userId       String
  clientId     String
  scopes       Json
  risk         String
  entitlements Json
  createdAt    DateTime
  expiresAt    DateTime

  @@map("sessions")
}

model RefreshToken {
  id        String   @id
  sessionId String
  userId    String
  expiresAt DateTime

  @@map("refresh_tokens")
}

model AuditEvent {
  id        String   @id
  eventType String
  userId    String?
  clientId  String?
  createdAt DateTime
  metadata  Json?

  @@map("audit_events")
}
