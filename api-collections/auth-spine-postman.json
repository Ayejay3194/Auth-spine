{
  "info": {
    "name": "Auth-Spine API Collection",
    "description": "Complete API collection for testing Auth-Spine",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"test@example.com\", \"password\": \"TestPass123!\", \"client_id\": \"business-spine-app\"}"
        },
        "url": "{{base_url}}/token"
      }
    },
    {
      "name": "Get User Info",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
        "url": "{{base_url}}/oauth/userinfo"
      }
    }
  ]
}
