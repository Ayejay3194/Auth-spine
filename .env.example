# ==================================
# Auth-Spine Environment Configuration
# ==================================
# Copy this file to .env and fill in your values

# DATABASE
DATABASE_URL="postgresql://username:password@localhost:5432/authspine?schema=public"

# AUTH SERVER
PORT=4000
ISSUER=http://localhost:4000
JWT_ALG=HS256
JWT_SECRET=change-this-to-a-strong-random-secret-at-least-32-characters-long
ACCESS_TTL_SECONDS=1800
REFRESH_TTL_SECONDS=604800
CORS_ORIGINS=http://localhost:3000

# EXTERNAL SERVICES (Optional)
STRIPE_SECRET_KEY=sk_test_...
SENDGRID_API_KEY=SG...
SENTRY_DSN=https://...@sentry.io/...
