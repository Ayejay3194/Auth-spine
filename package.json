{
  "name": "auth-spine-multiclient-starter",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "business-spine"
  ],
  "scripts": {
    "dev": "concurrently -n auth,api,ui -c auto \"npm run dev -w @spine/auth-server\" \"npm run dev -w @spine/resource-api\" \"npm run dev -w @spine/business-spine\"",
    "dev:auth": "npm run dev -w @spine/auth-server",
    "dev:api": "npm run dev -w @spine/resource-api",
    "dev:ui": "npm run dev -w @spine/business-spine",
    "build": "npm run build -ws",
    "build:auth": "npm run build -w @spine/auth-server",
    "build:api": "npm run build -w @spine/resource-api",
    "build:ui": "npm run build -w @spine/business-spine",
    "start": "concurrently -n auth,api,ui -c auto \"npm run start -w @spine/auth-server\" \"npm run start -w @spine/resource-api\" \"npm run start -w @spine/business-spine\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "typecheck:ws": "npm run typecheck -ws",
    "clean": "npm run clean -ws && rm -rf node_modules",
    "security:validate": "node scripts/validate-audit.mjs security-audit.json schemas/audit-gate.schema.json",
    "security:gate": "node scripts/security-gate.mjs security-audit.json",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.0.1",
    "eslint": "^9.0.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}